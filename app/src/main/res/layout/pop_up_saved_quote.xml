<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cvSavedQuoteItem"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        >


        <TextView
            android:id="@+id/tvPopUpQuote"
            style="@style/Base.Theme.YourFamousCoach.TextViewsH4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:textColor="?attr/colorPrimaryDark"
            android:layout_marginBottom="12dp"
            android:ellipsize="end"
            android:textSize="20sp"
            tools:text="Strong Survive" />

        <TextView
            android:id="@+id/tvPopUpAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvPopUpQuote"
            android:layout_alignStart="@id/tvPopUpQuote"
            android:layout_marginTop="8dp"
            style="@style/Base.Theme.YourFamousCoach.TextViewsH5"
            tools:text="da vinci"
            android:textAlignment="center"
            android:maxLength="18"
            android:textColor="?attr/colorPrimaryDark"
            android:ellipsize="end"
            android:textSize="18sp"
            android:textStyle="italic"
            />

    </RelativeLayout>


</androidx.cardview.widget.CardView>