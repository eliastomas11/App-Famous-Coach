<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.YourFamousCoach" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryDark">@color/pink_dark</item>
        <item name="colorAccent">@color/light_blue</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:textViewStyle">@style/CommonTextViews</item>
        <item name="android:statusBarColor">@color/blue_night_dark</item>
        <item name="android:navigationBarColor">@color/blue_night_dark</item>
        <item name="bottomAppBarStyle">@style/BottomAppBarCommon</item>
        <item name="statusBarBackground">@color/blue_night_dark</item>
        <item name="cardViewStyle">@style/CardView.Common</item>
        <item name="backgroundColor">@color/blue_night_dark</item>
    </style>

    <style name="Theme.YourFamousCoach" parent="Base.Theme.YourFamousCoach" />

    <style name="Theme.YourFamousCoach.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.YourFamousCoach.AppWidgetContainer" parent="Theme.YourFamousCoach.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/blue_night_dark</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/new_splash</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.YourFamousCoach</item>
    </style>


</resources>